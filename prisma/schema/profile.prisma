model Profile {
  id          String    @id @default(uuid())
  userId      String    @unique
  displayName String?
  avatarUrl   String?
  bio         String?
  lastSeen    DateTime?
  isOnline    Boolean   @default(false)
  //@relations
  user        User      @relation("userProfile", fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
