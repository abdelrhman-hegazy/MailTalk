model Message {
  id             String   @id @default(cuid())
  conversationId String
  senderId       String
  content        String
  type           MessageType
  status         MessageStatus
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  conversation Conversation @relation(fields: [conversationId], references: [id])
}

enum MessageType {
  TEXT
  IMAGE
  FILE
}

enum MessageStatus {
  SENT
  DELIVERED
  READ
}
